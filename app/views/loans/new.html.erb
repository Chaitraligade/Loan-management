<% if current_user %>
  <div class="loan-form-container">
    <h2 class="form-title">ðŸ“„ Apply for a New Loan</h2>
    <%= form_with model: @loan, local: true do |f| %>
      <div class="form-fields">
        <div class="form-group">
          <label>Amount</label>
          <%= f.number_field :amount, class: "input" %>
        </div>

        <div class="form-group">
          <label>Due Date</label>
          <%= f.date_field :due_date, class: "input" %>
        </div>

        <div class="form-group">
          <label>Loan Duration (months)</label>
          <%= f.number_field :duration, class: "input" %>
        </div>

        <!-- Dropdown for Institution -->
        <div class="form-group">
          <label>Institution</label>
          <%= f.select :institution_id, Institution.all.collect { |i| [i.name, i.id] }, { prompt: "Select an Institution" }, class: "input" %>
        </div>

        <div class="submit-button">
          <%= f.submit "Create Loan", class: "btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>



<style>
  body {
    background: #f7fafc;
    font-family: 'Segoe UI', sans-serif;
  }

  .loan-form-container {
    max-width: 600px;
    margin: 50px auto;
    background: white;
    padding: 40px;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .user-info {
    font-size: 14px;
    color: #4a5568;
    margin-bottom: 20px;
    text-align: right;
  }

  .form-title {
    font-size: 28px;
    text-align: center;
    color: #2d3748;
    margin-bottom: 30px;
  }

  .form-fields {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-between;
  }

  .form-group {
    flex: 1 1 45%;
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 6px;
  }

  .input {
    padding: 10px 12px;
    border: 1px solid #cbd5e0;
    border-radius: 8px;
    font-size: 16px;
    background: #f9fafb;
    transition: border-color 0.3s ease;
  }

  .input:focus {
    border-color: #3182ce;
    outline: none;
    background: #fff;
  }

  .submit-button {
    flex: 1 1 100%;
    text-align: center;
    margin-top: 20px;
  }

  .btn-primary {
    background: linear-gradient(135deg, #007bff, #00c6ff);
    color: #fff;
    padding: 12px 26px;
    font-size: 18px;
    font-weight: bold;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    box-shadow: 0 5px 15px rgba(0,123,255,0.3);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,123,255,0.4);
  }
</style>

