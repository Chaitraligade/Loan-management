<% if current_user %>
  <div class="loan-form-container">
    <h2 class="form-title">ðŸ“„ Apply for a New Loan</h2>
    <%= form_with model: @loan, local: true do |f| %>
      <div class="form-fields grid-container">

        <!-- Financial Inputs -->
        <div class="form-group">
          <%= f.label :amount, "Amount" %>
          <%= f.number_field :amount, class: "input", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :monthly_income, "Monthly Income" %>
          <%= f.number_field :monthly_income, class: "input", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :duration, "Loan Duration (months)" %>
          <%= f.number_field :duration, class: "input", required: true %>
        </div>

        <!-- Loan Purpose -->
        <div class="form-group">
          <%= f.label :purpose, "Purpose" %>
          <%= f.text_field :purpose, placeholder: "E.g. Education, Medical, Business", class: "input", required: true %>
        </div>

        <!-- Employment Info -->
        <div class="form-group">
          <%= f.label :employment_status, "Employment Status" %>
          <%= f.text_field :employment_status, placeholder: "E.g. Full-time, Self-employed", class: "input", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :employer_name, "Employer Name" %>
          <%= f.text_field :employer_name, placeholder: "Company or Organization Name", class: "input", required: true %>
        </div>

        <!-- Institution -->
        <div class="form-group">
          <%= f.label :institution_id, "Institution" %>
          <% if @institutions.present? %>
            <%= f.collection_select :institution_id, @institutions, :id, :name, { prompt: "Select an Institution" }, { class: "input", required: true } %>
          <% else %>
            <p class="alert alert-danger">No institutions available. Please add institutions first.</p>
          <% end %>
        </div>

        <!-- Submit Button -->
        <div class="submit-button text-center">
          <%= f.submit "Create Loan", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>



<style>
  body {
    background: #f7fafc;
    font-family: 'Segoe UI', sans-serif;
  }

  .loan-form-container {
    max-width: 600px;
    margin: 50px auto;
    background: white;
    padding: 40px;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .user-info {
    font-size: 14px;
    color: #4a5568;
    margin-bottom: 20px;
    text-align: right;
  }

  .form-title {
    font-size: 28px;
    text-align: center;
    color: #2d3748;
    margin-bottom: 30px;
  }

  .form-fields {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-between;
  }

  .form-group {
    flex: 1 1 45%;
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 6px;
  }

  .input {
    padding: 10px 12px;
    border: 1px solid #cbd5e0;
    border-radius: 8px;
    font-size: 16px;
    background: #f9fafb;
    transition: border-color 0.3s ease;
  }

  .input:focus {
    border-color: #3182ce;
    outline: none;
    background: #fff;
  }

  .submit-button {
    flex: 1 1 100%;
    text-align: center;
    margin-top: 20px;
  }

  .btn-primary {
    background: linear-gradient(135deg, #007bff, #00c6ff);
    color: #fff;
    padding: 12px 26px;
    font-size: 18px;
    font-weight: bold;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    box-shadow: 0 5px 15px rgba(0,123,255,0.3);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,123,255,0.4);
  }
</style>

